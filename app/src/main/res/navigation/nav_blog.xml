<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_blog"
    app:startDestination="@id/blogFragment">

    <fragment
        android:id="@+id/blogFragment"
        android:name="com.dorokhov.jetpackapp.ui.main.blog.BlogFragment"
        android:label="fragment_blog"
        tools:layout="@layout/fragment_blog">
        <action
            android:id="@+id/action_blogFragment_to_viewBlogFragment"
            app:destination="@id/viewBlogFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/viewBlogFragment"
        android:name="com.dorokhov.jetpackapp.ui.main.blog.ViewBlogFragment"
        android:label="fragment_view_blog"
        tools:layout="@layout/fragment_view_blog">
        <action
            android:id="@+id/action_viewBlogFragment_to_updateBlogFragment"
            app:destination="@id/updateBlogFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_viewBlogFragment_to_home"
            app:destination="@id/blogFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@navigation/nav_blog"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/updateBlogFragment"
        android:name="com.dorokhov.jetpackapp.ui.main.blog.UpdateBlogFragment"
        android:label="fragment_update_blog"
        tools:layout="@layout/fragment_update_blog">
        <action
            android:id="@+id/action_updateBlogFragment_to_home"
            app:destination="@id/blogFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@navigation/nav_blog"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>